<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:layout_marginEnd="@dimen/text_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/agenda_item_poster"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        fresco:actualImageScaleType="fitCenter"/>

    <TextView
        android:id="@+id/agenda_item_title"
        style="@style/AppTheme.TextSubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/agenda_item_poster"
        android:text="@string/example_text" />

    <TextView
        android:id="@+id/agenda_item_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_below="@+id/agenda_item_title"
        android:layout_toEndOf="@+id/agenda_item_poster"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/calendar_clock"
        android:drawablePadding="5dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/agenda_item_deelnemers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/agenda_item_poster"
        android:text="Medium Text"
        android:layout_below="@+id/agenda_item_when"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/account_multiple"
        android:drawablePadding="5dp"
        android:gravity="center_vertical" />


    <TextView
        android:id="@+id/registration_compulsory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/agenda_item_deelnemers"
        android:layout_toEndOf="@id/agenda_item_poster"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/ic_outline_whatshot_24px"
        android:tint="@color/colorRed"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/agenda_item_comment_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_compulsory"
        android:layout_toEndOf="@id/agenda_item_poster"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/format_quote_close"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/agenda_item_waar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_below="@+id/agenda_item_comment_number"
        android:layout_toEndOf="@+id/agenda_item_poster"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/earth"
        android:drawablePadding="5dp"
        android:gravity="center_vertical" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/list_divider"
        android:layout_below="@id/agenda_item_waar"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"/>
</RelativeLayout>