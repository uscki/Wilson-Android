<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/agenda_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/example_text"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/agenda_item_poster"
        android:layout_toEndOf="@+id/agenda_item_poster"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        style="@style/AppTheme.TextSubHeader" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/agenda_item_poster"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        fresco:actualImageScaleType="fitCenter"/>

    <TextView
        android:id="@+id/agenda_item_when"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_below="@+id/agenda_item_title"
        android:layout_toRightOf="@+id/agenda_item_poster"
        android:layout_toEndOf="@+id/agenda_item_poster"
        style="@style/AppTheme.Text"
        android:drawableStart="@drawable/calendar_clock"
        android:drawableLeft="@drawable/calendar_clock"
        android:drawablePadding="5dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/agenda_item_deelnemers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_toEndOf="@+id/agenda_item_poster"
        android:layout_below="@+id/agenda_item_when"
        style="@style/AppTheme.Text"
        android:layout_toRightOf="@+id/agenda_item_poster"
        android:drawableLeft="@drawable/account_multiple"
        android:drawableStart="@drawable/account_multiple"
        android:drawablePadding="5dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/agenda_item_waar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_below="@+id/agenda_item_deelnemers"
        android:layout_toRightOf="@+id/agenda_item_poster"
        android:layout_toEndOf="@+id/agenda_item_poster"
        style="@style/AppTheme.Text"
        android:drawableLeft="@drawable/earth"
        android:drawableStart="@drawable/earth"
        android:drawablePadding="5dp"
        android:gravity="center_vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/agenda_inschrijven_verplicht_background"
        android:layout_below="@+id/agenda_item_waar"
        android:layout_toRightOf="@+id/agenda_item_poster"
        android:layout_toEndOf="@+id/agenda_item_poster"
        android:layout_margin="4dp"
        android:visibility="gone"
        android:id="@+id/agenda_inschrijven_verplicht">

        <TextView
            android:id="@+id/inschrijven_verplicht_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/agenda_inschrijven_verplicht"
            style="@style/AppTheme.Text"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:drawableLeft="@drawable/emoticon_happy"
            android:drawableStart="@drawable/emoticon_happy"
            android:drawablePadding="5dp"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inschrijven_verplicht_date"
            android:text="maandag 20 januari 1979 23:59"
            android:layout_below="@+id/inschrijven_verplicht_text"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:textColor="#fff" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/list_divider"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"/>
</RelativeLayout>