<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/text_margin"
    android:layout_marginEnd="@dimen/text_margin"
    >

    <TextView
        android:id="@+id/dividing_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextSubHeader"
        />

    <TextView
        android:id="@+id/dividing_list_subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.TextSubSubHeader"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/dividing_list_message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/dividing_list_header_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/list_divider"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:visibility="gone"
        />

</LinearLayout>