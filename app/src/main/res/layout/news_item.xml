<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <me.blackwolf12333.appcki.views.NetworkImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/news_item_category"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/news_item_title"
        style="@style/AppTheme.TextSubHeader"
        android:layout_toRightOf="@+id/news_item_category"
        android:layout_toEndOf="@+id/news_item_category"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_item_metadata"
        android:text="Menno houd van Bram de Beer"
        android:layout_below="@+id/news_item_title"
        android:layout_toRightOf="@+id/news_item_category"
        android:layout_toEndOf="@+id/news_item_category"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="5dp"
        android:textColor="#FF616161"/>

    <me.blackwolf12333.appcki.views.BBTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Text"
        android:text=""
        android:layout_below="@id/news_item_metadata"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/news_item_content"
        android:layout_marginBottom="10dp"
        android:linksClickable="true" />
</RelativeLayout>