<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/meeting_overview_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/AppTheme.TextHeader"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meeting_overview_title"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_time_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/clock"
            android:drawablePadding="5dp"
            style="@style/AppTheme.Text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_where_text"
            android:layout_below="@+id/meeting_overview_time_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/earth"
            android:drawablePadding="5dp"
            style="@style/AppTheme.Text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_mensen_text"
            android:layout_below="@+id/meeting_overview_where_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            style="@style/AppTheme.Text"
            android:drawableStart="@drawable/account_multiple"
            android:drawablePadding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_status_text"
            android:layout_below="@+id/meeting_overview_mensen_text"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/check"
            android:drawablePadding="5dp"
            style="@style/AppTheme.Text" />
    </RelativeLayout>
</RelativeLayout>