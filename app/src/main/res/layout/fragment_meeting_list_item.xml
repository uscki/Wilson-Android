<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:id="@+id/meeting_overview_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/AppTheme.TextHeader"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meeting_overview_title"
        android:layout_margin="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_time_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/clock"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_time_text"
            android:layout_toRightOf="@+id/meeting_overview_time_icon"
            android:layout_toEndOf="@+id/meeting_overview_time_icon"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/example_text"
            style="@style/AppTheme.Text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_where_icon"
            android:layout_below="@+id/meeting_overview_time_icon"
            android:src="@drawable/earth"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_where_text"
            android:layout_toRightOf="@+id/meeting_overview_where_icon"
            android:layout_toEndOf="@+id/meeting_overview_where_icon"
            android:layout_below="@+id/meeting_overview_time_icon"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/example_text"
            style="@style/AppTheme.Text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_mensen_icon"
            android:layout_below="@+id/meeting_overview_where_icon"
            android:src="@drawable/account_multiple"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_mensen_text"
            android:layout_toRightOf="@+id/meeting_overview_mensen_icon"
            android:layout_toEndOf="@+id/meeting_overview_mensen_icon"
            android:layout_below="@+id/meeting_overview_where_icon"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/example_text"
            style="@style/AppTheme.Text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_status_icon"
            android:layout_below="@+id/meeting_overview_mensen_icon"
            android:src="@drawable/check"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meeting_overview_status_text"
            android:layout_toRightOf="@+id/meeting_overview_status_icon"
            android:layout_toEndOf="@+id/meeting_overview_status_icon"
            android:layout_below="@+id/meeting_overview_mensen_icon"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="10dp"
            android:text="@string/example_text"
            style="@style/AppTheme.Text"/>
    </RelativeLayout>
</RelativeLayout>