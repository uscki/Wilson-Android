<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newQuoteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin">

    <EditText
        android:id="@+id/quoteTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="40"
        android:hint="Quote"
        android:inputType="textCapSentences|textAutoComplete|textAutoCorrect|textMultiLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quoteTextInput"
        android:id="@+id/newQuoteButtonLayout"
        >

        <Button
            android:id="@+id/confirmNewQuoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Voeg toe"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/cancelNewQuoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/confirmNewQuoteButton"
            android:text="Annuleren" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newQuoteButtonLayout"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/list_divider" />
</RelativeLayout>