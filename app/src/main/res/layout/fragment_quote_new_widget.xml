<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newQuoteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/new_item_editbox_margin">

    <RelativeLayout
        android:id="@+id/newQuoteButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/quoteTextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="34dp"
            android:ems="40"
            android:hint="Quote"
            android:inputType="textCapSentences|textAutoComplete|textAutoCorrect|textMultiLine" />

        <ImageButton
            android:id="@+id/confirmNewQuoteButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rounded_resource_colour"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:visibility="visible"
            app:srcCompat="@drawable/plus" />
    </RelativeLayout>
</RelativeLayout>