<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="me.blackwolf12333.appcki.fragments.agenda.AgendaDetailFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agenda_detail_title"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/example_text"
            style="@style/AppTheme.TextHeader" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agenda_detail_when"
            android:layout_below="@+id/agenda_detail_title"
            android:text="@string/example_text"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            style="@style/AppTheme.TextSubHeader" />

        <me.blackwolf12333.appcki.views.BBTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/agenda_detail_longtext"
            android:layout_below="@+id/agenda_detail_when"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            style="@style/AppTheme.Text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/agenda_detail_longtext"
            android:layout_margin="16dp"
            android:background="@drawable/agenda_detail_summary_background">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_commissie_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/account_multiple"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_commissie_text"
                android:layout_toRightOf="@+id/agenda_summary_commissie_icon"
                android:layout_toEndOf="@+id/agenda_summary_commissie_icon"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_text"
                style="@style/AppTheme.Text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_title_icon"
                android:layout_below="@+id/agenda_summary_commissie_icon"
                android:src="@drawable/label_outline"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_title_text"
                android:layout_toRightOf="@+id/agenda_summary_title_icon"
                android:layout_toEndOf="@+id/agenda_summary_title_icon"
                android:layout_below="@+id/agenda_summary_commissie_text"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_text"
                style="@style/AppTheme.Text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_waar_icon"
                android:layout_below="@+id/agenda_summary_title_icon"
                android:src="@drawable/earth"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_waar_text"
                android:layout_toRightOf="@+id/agenda_summary_waar_icon"
                android:layout_toEndOf="@+id/agenda_summary_waar_icon"
                android:layout_below="@+id/agenda_summary_title_text"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_text"
                style="@style/AppTheme.Text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_when_icon"
                android:layout_below="@+id/agenda_summary_waar_icon"
                android:src="@drawable/calendar"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_when_text"
                android:layout_toRightOf="@+id/agenda_summary_when_icon"
                android:layout_toEndOf="@+id/agenda_summary_when_icon"
                android:layout_below="@+id/agenda_summary_waar_text"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/example_text"
                style="@style/AppTheme.Text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_cost_icon"
                android:layout_below="@+id/agenda_summary_when_icon"
                android:src="@drawable/cash_multiple"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/agenda_summary_cost_text"
                android:layout_toRightOf="@+id/agenda_summary_cost_icon"
                android:layout_toEndOf="@+id/agenda_summary_cost_icon"
                android:layout_below="@+id/agenda_summary_when_text"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:text="@string/example_text"
                style="@style/AppTheme.Text"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>