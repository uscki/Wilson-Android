<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <!-- TODO string resources -->
    <TextView
        android:id="@+id/textView2"
        style="@style/AppTheme.TextSubSubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weet je zeker dat je op dit onderschrift wil stemmen?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/text_margin"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/BBTextView"
        app:layout_constraintBottom_toBottomOf="@id/BBTextView"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        />

    <nl.uscki.appcki.android.views.BBTextView
        android:id="@+id/BBTextView"
        style="@style/AppTheme.Text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintWidth_percent=".6"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        />

    <!-- TODO string resources -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        style="@style/AppTheme.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niet meer om bevestiging vragen"
        app:layout_constraintTop_toBottomOf="@id/BBTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/text_margin"
        />
</androidx.constraintlayout.widget.ConstraintLayout>