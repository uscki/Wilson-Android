<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.uscki.appcki.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".helpers.AlarmReceiver" />
        <receiver android:name=".services.OnetimeAlarmReceiver" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="true" />

        <activity
            android:name="nl.uscki.appcki.android.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar"
            android:allowTaskReparenting="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/smobo_searchable" />
        </activity>
        <activity
            android:name=".activities.AgendaActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="nl.uscki.appcki.android.activities.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.uscki.appcki.android.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.MeetingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="nl.uscki.appcki.android.activities.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.uscki.appcki.android.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SmoboActivity"
            android:label="@string/title_activity_smobo"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.uscki.appcki.android.activities.MainActivity" />
        </activity>

        <service android:name=".services.NotificationReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.FCMInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activities.NewsActivity"
            android:label="@string/title_activity_news"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nl.uscki.appcki.android.activities.MainActivity" />
        </activity>
        <service
            android:name=".services.AgendaSubscriberService"
            android:exported="false" />
        <service
            android:name=".services.EventExportService"
            android:exported="false"/>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"/>
    </application>

</manifest>